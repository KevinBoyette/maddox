{
  "name": "maddox",
  "version": "3.0.0",
  "description": "Maddox provides a simple way to rapidly unit test complex success and failure scenarios which can be driven by responses of mocked external dependencies.",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run ut && npm run lint",
    "perf": "maddox -Pp -d ./spec/unit",
    "ut": "_mocha ./spec/unit",
    "coverage": "./bin/maddox-cov.js",
    "lint": "eslint ./spec/ ./lib",
    "lint-fix": "eslint ./spec/ ./lib --fix",
    "build-docs": "node ./generate-docs/build-read-io-docs"
  },
  "bin": {
    "maddox": "./bin/maddox.js"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corybill/maddox.git"
  },
  "keywords": [
    "StriveNine",
    "Strive9",
    "S9",
    "Scenario Testing",
    "BDD",
    "Behavior Driven Development",
    "Business Requirement Driven Development",
    "BRDD",
    "BDD Unit Testing",
    "Mocha"
  ],
  "author": "Cory Parrish",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/corybill/maddox/issues"
  },
  "homepage": "https://github.com/corybill/maddox#readme",
  "contributors": [
    {
      "name": "Kuntal Roy"
    },
    {
      "name": "Meir Rosner"
    },
    {
      "name": "Daniel Kim"
    }
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "4.x",
    "chai": "4.x",
    "chance": "1.x",
    "core-util-is": "1.x",
    "errr": "2.x",
    "eslint": "6.x",
    "fs-extra": "5.x",
    "is-subset": "0.x",
    "lodash.clonedeep": "^4.5.0",
    "mocha": "7.x",
    "preconditions": "2.x",
    "semver": "5.x",
    "simple-statistics": "5.x",
    "sinon": "4.x",
    "uuid": "1.x"
  },
  "dependencies": {
    "bluebird": "^3.7.2"
  }
}
